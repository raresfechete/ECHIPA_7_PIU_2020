<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border"
    >

    <TextView
        android:id="@+id/nume_proiect_cu"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Something"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/nume_lider_cu"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/nume_proiect_cu"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/labelProiect_cu"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:labelFor="@id/nume_proiect_cu"
        android:text="Proiect"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@id/nume_proiect_cu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelLider_cu"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:labelFor="@id/nume_lider_cu"
        android:text="Lider"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@id/nume_lider_cu"
        app:layout_constraintTop_toBottomOf="@id/nume_proiect_cu" />

    <Button
        android:id="@+id/buton_be_a_leader"
        android:layout_width="190dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nume_lider_cu"
        android:layout_margin="10dp"
        android:text="Join"
        android:textSize="15sp"
        android:onClick="joinTeam"
        />

</androidx.constraintlayout.widget.ConstraintLayout>