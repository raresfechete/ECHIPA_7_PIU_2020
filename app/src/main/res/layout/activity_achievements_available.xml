<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/i3">

    <ImageView
        android:id="@+id/achievement_image_student_available"
    android:layout_width="95dp"
    android:layout_height="81dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:padding="10dp"
    android:src="@drawable/student"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
        android:id="@+id/achievement_student_name_available"
        android:layout_width="151dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:text="@string/name1"
        android:textColor="@color/albastrulMamei"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/achievement_image_student_available"
        app:layout_constraintLeft_toRightOf="@id/achievement_image_student_available"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246"
        />

    <TextView
        android:id="@+id/achievement_title_available"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/achievement_image_student_available"
        android:text="Achievements"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="@color/gray"
        />

    <Button
        android:id="@+id/achievement_button_unlocked_available"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onUnlockPress"
        app:layout_constraintTop_toBottomOf="@id/achievement_title_available"
        android:text="Unlocked"

        />

    <Button
        android:id="@+id/achievement_button_available_available"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/achievement_title_available"
        android:text="Available"
        android:onClick="onAvailablePress"
        />

    <ListView
        android:id="@+id/myRecyclerView_achievement_available"
        android:layout_width="407dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/achievement_button_available_available"
        app:layout_constraintVertical_bias="0.399"
        tools:listitem="@layout/layout_activity_item_available" />

</androidx.constraintlayout.widget.ConstraintLayout>