<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student">


    <ImageView
        android:id="@+id/image_student"
        android:layout_width="95dp"
        android:layout_height="81dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:src="@drawable/student"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/student_name"
        android:layout_width="151dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:text="Alex Pereanu"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/image_student"
        app:layout_constraintLeft_toRightOf="@id/image_student"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246"
        android:gravity="center"
        />

    <TextView

        android:layout_width="153dp"
        android:layout_height="29dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Calculatoare"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/image_student"
        app:layout_constraintTop_toBottomOf="@+id/student_name"

        />

    <TextView
        android:id="@+id/student_nivel"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:text="Nivel 4"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/image_student"
        app:layout_constraintTop_toBottomOf="@id/image_student"
        />

    <Button
        android:id="@+id/student_statistica_cursuri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:backgroundTint="@color/teal_700"
        android:text="Statistica cursuri"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_nivel"
        android:onClick="statisticaCursuri"
        />

    <Button
        android:id="@+id/student_voteaza"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/teal_700"
        android:text="Voteaza"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/student_statistica_cursuri"
        app:layout_constraintRight_toRightOf="@id/student_statistica_cursuri"
        app:layout_constraintTop_toBottomOf="@id/student_statistica_quiz"
        android:onClick="voteaza"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/teal_700"
        android:text="Chat"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/student_statistica_cursuri"
        app:layout_constraintRight_toRightOf="@+id/student_statistica_cursuri"
        app:layout_constraintTop_toBottomOf="@+id/student_voteaza" />

    <Button
        android:id="@+id/student_statistica_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/teal_700"
        android:text="Statistica QUIZ-URI"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/student_statistica_cursuri"
        app:layout_constraintRight_toRightOf="@id/student_statistica_cursuri"
        app:layout_constraintTop_toBottomOf="@id/student_statistica_cursuri"
        android:onClick="statisticaQuizuri"
        />

    <ImageView
        android:layout_width="93dp"
        android:layout_height="90dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/utcn"
        app:layout_constraintLeft_toRightOf="@+id/student_name"
        app:layout_constraintTop_toTopOf="@+id/image_student" />


</androidx.constraintlayout.widget.ConstraintLayout>