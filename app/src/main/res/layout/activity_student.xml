<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student"
    android:background="@drawable/i3">


    <ImageView
        android:id="@+id/image_student"
        android:layout_width="95dp"
        android:layout_height="81dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:src="@drawable/student"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="goToProfil"/>



    <TextView
        android:id="@+id/student_name_student"
        android:layout_width="151dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:text="@string/name1"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/image_student"
        app:layout_constraintLeft_toRightOf="@id/image_student"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246"
        android:gravity="center"
        />

    <TextView

        android:layout_width="153dp"
        android:layout_height="29dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/profil"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/image_student"
        app:layout_constraintTop_toBottomOf="@+id/student_name_student"

        />

    <TextView
        android:id="@+id/student_nivel"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:text="Nivel 4"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/image_student"
        app:layout_constraintTop_toBottomOf="@id/image_student"
        />

    <Button
        android:id="@+id/student_statistica_cursuri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_700"
        android:onClick="statisticaCursuri"
        android:text="Statistica cursuri"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_nivel" />

    <Button
        android:id="@+id/student_voteaza"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_700"
        android:text="Voteaza"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/student_statistica_cursuri"
        app:layout_constraintRight_toRightOf="@id/student_statistica_cursuri"
        app:layout_constraintTop_toBottomOf="@id/student_statistica_quiz"
        android:onClick="voteaza"/>

    <Button
        android:id="@+id/chat_student"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_700"
        android:text="Chat"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/student_statistica_cursuri"
        app:layout_constraintRight_toRightOf="@+id/student_statistica_cursuri"
        app:layout_constraintTop_toBottomOf="@+id/student_achievement"
        android:onClick="chat"
        />
  <Button
        android:id="@+id/student_feedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_700"
        android:text="Feedback"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/student_statistica_cursuri"
        app:layout_constraintRight_toRightOf="@+id/student_statistica_cursuri"
        app:layout_constraintTop_toBottomOf="@+id/student_quizDemo"
        android:onClick="feedback"/>

    <Button
        android:id="@+id/student_statistica_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_700"
        android:text="Statistica QUIZ-URI"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/student_statistica_cursuri"
        app:layout_constraintRight_toRightOf="@id/student_statistica_cursuri"
        app:layout_constraintTop_toBottomOf="@id/student_statistica_cursuri"
        android:onClick="statisticaQuizuri"
        />

    <Button
        android:id="@+id/student_achievement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_700"
        android:text="Achievements"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/student_statistica_cursuri"
        app:layout_constraintRight_toRightOf="@id/student_statistica_cursuri"
        app:layout_constraintTop_toBottomOf="@id/student_feedback"
        android:onClick="achievement"
        />

    <Button
        android:id="@+id/student_quizDemo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_700"
        android:text="QUIZ DEMO"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/student_statistica_cursuri"
        app:layout_constraintRight_toRightOf="@id/student_statistica_cursuri"
        app:layout_constraintTop_toBottomOf="@id/student_voteaza"
        android:onClick="quizDemo"
        />



    <Button
        android:id="@+id/student_ranking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_700"
        android:text="Rankings"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/student_statistica_cursuri"
        app:layout_constraintRight_toRightOf="@id/student_statistica_cursuri"
        app:layout_constraintTop_toBottomOf="@id/chat_student"
        android:onClick="ranking"
        />

    <ImageView
        android:layout_width="93dp"
        android:layout_height="90dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/utcn"
        app:layout_constraintLeft_toRightOf="@+id/student_name_student"
        app:layout_constraintTop_toTopOf="@+id/image_student" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>