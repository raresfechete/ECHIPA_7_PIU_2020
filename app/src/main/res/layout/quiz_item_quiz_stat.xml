<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewCursName"
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:ems="5"
        android:padding="5dp"
        android:text="Nume curs"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewQuizTitle"
        android:layout_width="149dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:padding="5dp"
        android:text="Titlu quiz"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/textViewCursName"
        app:layout_constraintTop_toBottomOf="@id/textViewCursName" />

    <TextView
        android:id="@+id/textViewPunctaj"
        android:layout_width="144dp"
        android:layout_height="49dp"
        android:layout_marginTop="36dp"
        android:padding="5dp"
        android:text="Punctaj"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="@id/textViewQuizTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewQuizTitle" />

    <EditText
        android:id="@+id/displayCursName"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="36dp"
        android:ems="11"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/textViewCursName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCursName"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/displayQuizTitle"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="11"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintLeft_toRightOf="@id/textViewPunctaj"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewPunctaj"
        app:layout_constraintTop_toTopOf="@id/textViewQuizTitle"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/displayPunctaj"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:ems="11"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.582"
        app:layout_constraintLeft_toRightOf="@id/textViewPunctaj"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewPunctaj"
        app:layout_constraintTop_toTopOf="@id/textViewPunctaj" />

</androidx.constraintlayout.widget.ConstraintLayout>