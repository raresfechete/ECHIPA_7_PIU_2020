<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border">


    <TextView
        android:id="@+id/nume_proiect_fara"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Something"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/labelProiect"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:labelFor="@id/nume_proiect_fara"
        android:text="Proiect"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@id/nume_proiect_fara"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelLider"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:labelFor="@id/nume_lider_fara"
        android:text="Lider"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@id/nume_lider_fara"
        app:layout_constraintTop_toBottomOf="@id/nume_proiect_fara" />

    <TextView
        android:id="@+id/nume_lider_fara"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/nume_proiect_fara"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/buton_be_a_leader"
        android:layout_width="190dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nume_lider_fara"
        android:layout_margin="10dp"
        android:text="Be a leader"
        android:textSize="15sp"
        android:onClick="vreiSaFiiLider"
        />

    <Button
        android:id="@+id/buton_propune_lider"
        android:layout_width="190dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nume_lider_fara"
        android:layout_margin="10dp"
        android:text="Name a leader"
        android:textSize="15sp"
        android:onClick="propuneLider"
        />


</androidx.constraintlayout.widget.ConstraintLayout>